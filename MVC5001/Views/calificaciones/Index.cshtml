@model IEnumerable<MVC5001.Models.calificaciones>

@{
    ViewBag.Title = "Listado de Calificaciones";
}

<div class="container mt-5">
    <h2 class="text-center">Listado de Calificaciones</h2>

    <div class="mb-4 text-right">
        @Html.ActionLink("Crear Nueva Calificación", "Create", null, new { @class = "btn btn-primary btn-lg" })
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Parcial1)</th>
                <th>@Html.DisplayNameFor(model => model.Parcial2)</th>
                <th>@Html.DisplayNameFor(model => model.parcial3)</th>
                <th>@Html.DisplayNameFor(model => model.alumnos.NombreCompleto)</th>
                <th>@Html.DisplayNameFor(model => model.docentes.NombreCompleto)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Parcial1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Parcial2)</td>
                    <td>@Html.DisplayFor(modelItem => item.parcial3)</td>
                    <td>@Html.DisplayFor(modelItem => item.alumnos.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.docentes.NombreCompleto)</td>
                    <td class="text-center">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Idc }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Idc }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Idc }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('¿Estás seguro de eliminar esta calificación?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

