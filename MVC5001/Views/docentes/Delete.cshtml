@model MVC5001.Models.docentes

@{
    ViewBag.Title = "Eliminar Docente";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 50%;">
        <h2 class="text-center mb-4">Eliminar Docente</h2>

        <h3 class="text-center text-danger">¿Está seguro de que desea eliminar este docente?</h3>

        <div>
            <h4 class="text-center">Datos del Docente</h4>
            <hr />

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NombreCompleto)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NombreCompleto)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telefono)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CorreoElectronico)
                </dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center">
                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary btn-lg" })
                </div>
            </div>
        }
    </div>
</div>
