@model IEnumerable<MVC5001.Models.alumnos>

@{
    ViewBag.Title = "Lista de Alumnos";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Lista de Alumnos</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.ActionLink("➕ Nuevo Alumno", "Create", null, new { @class = "btn btn-primary btn-lg" })
                    </div>

                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
                                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                                <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                                    <td class="text-center">
                                        @Html.ActionLink("✏ Editar", "Edit", new { id = item.Matricula }, new { @class = "btn btn-warning btn-sm mx-1" })
                                        @Html.ActionLink("🔍 Detalles", "Details", new { id = item.Matricula }, new { @class = "btn btn-info btn-sm mx-1" })
                                        @Html.ActionLink("❌ Eliminar", "Delete", new { id = item.Matricula }, new { @class = "btn btn-danger btn-sm mx-1" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
