@model MVC5001.Models.alumnos

@{
    ViewBag.Title = "Eliminar Alumno";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">Eliminar Alumno</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning text-center">
                        <strong>¿Estás seguro de que quieres eliminar este alumno?</strong>
                        <p>Esta acción no se puede deshacer.</p>
                    </div>

                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light">Nombre Completo</th>
                                <td>@Html.DisplayFor(model => model.NombreCompleto)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Teléfono</th>
                                <td>@Html.DisplayFor(model => model.Telefono)</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Correo Electrónico</th>
                                <td>@Html.DisplayFor(model => model.CorreoElectronico)</td>
                            </tr>
                        </tbody>
                    </table>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary btn-lg" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
